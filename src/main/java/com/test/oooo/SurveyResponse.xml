<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.test.mapper.SurveyResponseMapper">

    <select id="getSurveyResponseById" resultType="com.test.oooo.SurveyResponse">
        SELECT * FROM survey_response WHERE id = #{id}
    </select>

    <select id="getSurveyResponses" resultType="com.test.oooo.SurveyResponse">
        SELECT * FROM survey_response
    </select>

    <insert id="createSurveyResponse" parameterType="com.test.oooo.Answer">
        INSERT INTO survey_response (question, answer)
        VALUES (#{question}, #{answer})
    </insert>

</mapper>